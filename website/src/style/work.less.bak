.mainContainer{
  overflow-y: scroll;
  background: rgb(230,230,230);
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  justify-content: center;
  flex-direction: row;
}
.header{
  position: fixed;
  z-index: 3;
  top: 0;
  left: 0;
  background: grey;
  height: 50px;
  width: 100%;
}
.headerLeft, .headerRight{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.headerLeft{
  float: left;
  margin-left: 10px
}
.headerRight{
  float: right;
  margin-right: 10px
}
.link{
  color: black;
  margin-right: 5px;
}
.toIndex{
  margin-left: 5px;
  color: black;
  text-decoration: none;
}
.contentWrapper{
  width: 60%;
  height: 100%;
  background: white;
  padding-left: 25px;
  margin-bottom: 25px;
  margin-top: 50px;
  min-height: 500px;
  padding-right: 25px;
}
.contentHeader{
  width: 100%;
  height: 20%;
}
.workTitle{
  float: left;
  margin-top: 25px;
  font-size: large;
}
.workMeta{
  margin-top: 10px;
  font-size: small;
}
.workComments, .workViews{
  margin-left: 3px;
}
.dividerWrapper{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.divider{
  width: 95%;
  margin-right: 25px;
  margin-bottom: 20px;
  margin-left: 20px;
}
.uploaderContainer{
  display: flex;
  align-items: flex-start;
}
.uploaderMeta{
  margin-left: 20px;
}
.uploaderName, .uploadTime{
  text-align: left;
  margin-top: 2px;
}
.content{
  width: 100%;
  margin-right: 25px;
}
.replyWrapper{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.row, .col{
  width: 100%;
}
.col{
  display: flex;
  justify-content: center;
}
.replyHeader{
  width: 100%;
  margin-right: 25px;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  align-items: baseline;
  border-bottom: 1px solid @split-color;
  padding-bottom: 10px;
}
.totalReplies{
  font-size: 1.25em;
  margin-top: 25px
}
.replySorter{
  margin-top: 25px;
  margin-right: 25px;
}
.replyDivider{
  padding-right: 25px;
}
.noReply{
  margin-top: 30px;
  color: #aaa;
  margin-bottom: 30px;
}
.downloadWrapper{
  width: 100%;
  margin-right: 25px;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  margin-bottom: 40px;
}
.contentWrapper > .dividerWrapper > .divider{
  margin-bottom: 0px;
}
.downTitle{
  font-size: 1.25em;
  margin-top: 25px;
  margin-right: calc(100% - 100px);
}
.fileList{
  width: 90%;
  min-height: 50px;
  margin-top: 20px;
  border: 1px solid @border-color;
  border-radius: 5px;

}
.noDownloads{
  color: @border-color
}
.fileListTerm{
  border-bottom: 1px solid @border-color;
  height: 50px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.noBorder{
  border: none;
}
.fileListTerm > div {
  width: 50%;
}
.fileListTerm > div:first-child > *{
  float: left;
}
.fileListTerm > div:last-child > * {
  float: right;
  margin-right: 10px;
}
.fileListTerm > div:nth-child(1) > span {
  margin-left: 25px;
}
.fileListTerm > div:first-child > span:first-child {
  margin-left: 10px;
}
.fileListTerm > div:last-child > span{
  margin-left: 10px;
}
.downloadButton{
  color: rgb(102,204,255);
  cursor: pointer;
}
.replyCard{
  width: 60%;
  min-height: 200px;
  background: white;
  padding-left: 25px;
  margin-bottom: 25px;
  padding-right: 25px;
}
.createReplyWrapper{
  margin-bottom: 20px;
  margin-top: 20px;
}
.createReplyButton{
  margin-top: 10px;
  margin-bottom: 20px;
  margin-right: 25px;
  float: right;
}
.repliesContainer{
  min-height: 100px;
}
.reply{
  min-height: 100px;
  border-bottom: 1px solid @border-color;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.senderInfoContainer{
  margin-top: 10px;
  margin-left: 10px;
  float: left;
  max-height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
}
.senderInfoContainer > div {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.senderInfoContainer > span {
  max-height: content-box;
}
.senderAvatar{

}
.sendDate{
  font-size: 5px;
  margin-bottom: 10px;
}
.replyContent{
  margin-left: 60px;
  margin-top: 10px;
}
.replyMeta{
  align-self: flex-end;
  margin-right: 20px;
  margin-bottom: 20px;
}
.liked{
  color: #409EFF;
}
.likeIcon{
  cursor: pointer;
}
